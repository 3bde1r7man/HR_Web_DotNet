@{
	ViewData["Title"] = "Vacation Form";
}
@model HR_Web.Models.Vacation

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
	{
		<div class="alert alert-danger" role="alert">
			@ViewBag.ErrorMessage
		</div>
	}
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.SuccessMessage
        </div>
    }
    <div class="row">
        <div class="col-md-4">
            <label asp-for="EmployeeId" class="control-label">Employee ID</label>
            <input asp-for="EmployeeId" class="form-control" disabled value="@ViewBag.EmployeeId" />
        </div>
        <div class="col-md-4">
            <label asp-for="EmployeeName" class="control-label">Employee Name</label>
            <input asp-for="EmployeeName" class="form-control" disabled value="@ViewBag.EmployeeName" />
        </div>
    </div>

    <form action="/home/VacationForm" method="post">
	    <div class="form-group">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" class="form-control" placeholder="From" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
	    </div>

	    <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control" placeholder="To" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Reason" class="control-label"></label>
            <textarea asp-for="Reason" class="form-control" placeholder="Reason" rows="8"></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="EmployeeId" value="@ViewBag.EmployeeId" />
        <input type="hidden" asp-for="EmployeeName" value="@ViewBag.EmployeeName" />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>