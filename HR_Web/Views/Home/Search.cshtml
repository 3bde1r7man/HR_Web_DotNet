@{
    ViewData["Title"] = "Search";
}
@model IEnumerable<HR_Web.Models.Employee>


<div class="container">
    <h1>Search Results</h1>
    <div class="row">
		<form asp-action="SearchEmployee" asp-controller="home">
            <div class="input-group">
                <input name="searchQuery" type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                <button id="searchButton" class="btn btn-outline-primary" type="submit">Search</button>
            </div>
        </form>
    </div>


    @if (!Model.Any())
    {
        <p>No results found.</p>
    }
    else
    {
        <table class="table">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var employee in Model)
				{
					<tr>
						<td>@employee.FirstName</td>
						<td>@employee.LastName</td>
					</tr>
				}
			</tbody>
        </table>
    }
</div>

